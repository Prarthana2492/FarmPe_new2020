<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff"
    android:paddingHorizontal="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/price_low_high"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeui"
                android:text="Price - Low to High"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/price_high_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeui"
                android:text="Price - High to Low"
                android:textSize="16dp" />


            <RadioButton
                android:id="@+id/alphabetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeui"
                android:text="Alphabetical"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeui"
                android:text="Rupee Saving - High to Low"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeui"
                android:text="Rupee Saving - Low to High"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:fontFamily="@font/segoeui"
                android:text="% Off - High to Low"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:text="Relevance"
                android:fontFamily="@font/segoeui"
                android:textSize="16dp" />

        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:text="DONE"
        android:singleLine="false"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"
        android:background="@drawable/border_filled_black"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="14dp" />



</LinearLayout>