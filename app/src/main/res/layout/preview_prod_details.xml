    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:text="Parle-G Gold Milk Glucose"
                android:textColor="#000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:singleLine="false"
                    android:text="Rs100"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/segoeui"
                    android:singleLine="false"
                    android:text="MRP"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/actual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/segoeui"
                    android:singleLine="false"
                    android:text="Rs100"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/offer_perc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border_filled_red_register"
                    android:fontFamily="@font/segoeui"
                    android:paddingHorizontal="10dp"
                    android:singleLine="false"
                    android:text="50%"
                    android:textColor="#fff"
                    android:textSize="14dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/prod_img_fix"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dairy_farm"

                        />

                    <ImageView
                        android:id="@+id/prod_img"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dairy_farm"

                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:text="About this product"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/abt_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:text="About this product"
                android:textColor="#000"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <com.SevenNine.essentials.Utils.QuantityPicker
                    android:id="@+id/quantityPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


              <!--  <QuantityPicker
                    android:id="@+id/quantityPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
-->
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"

        android:background="@drawable/border_grey_filled"
        >


        <TextView
        android:id="@+id/add_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeui"
        android:text="Add to Cart"
        android:singleLine="false"
        android:layout_weight="10"
        android:paddingVertical="12dp"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/border_filled_orrange_no_curve"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="14dp" />



    </LinearLayout>

</LinearLayout>












