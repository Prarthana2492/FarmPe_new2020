<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#FFFFFF"
    android:tag="cards main container">

    <LinearLayout
        android:id="@+id/item_click"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/prod_img_fix"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dairy_farm"

            />
            <ImageView
                android:id="@+id/prod_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dairy_farm"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                >

                <TextView
                    android:id="@+id/off_text"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_circle_img"
                    android:text="50%\n off"
                    android:gravity="center"
                    android:visibility="visible"
                    android:fontFamily="@font/segoeui"
                    android:textSize="12dp"
                    android:textColor="#fff"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f_name"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:singleLine="false"
            android:text="Nameeeeeeeeeeeeeeeeeeee"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Weight"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="13dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Rs100"
            android:textStyle="bold"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mrp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="MRP"
            android:layout_marginLeft="5dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/actual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Rs100"
            android:layout_marginLeft="5dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textSize="13dp" />


    </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        >
<!--
        <com.SevenNine.essentialscode.Utils.QuantityPicker
            android:id="@+id/quantityPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
-->

        <TextView
            android:id="@+id/add_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="ADD"
            android:singleLine="false"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/border_filled_orrange"

            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>












