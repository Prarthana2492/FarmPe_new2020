<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:background="@color/lang_bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            >

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            >

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_button"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="92"
                android:weightSum="100"

                android:gravity="center_vertical"
                >

                <!-- <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="end"
                    >

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_filled"
                    android:layout_gravity="center_vertical"

                    />
                </LinearLayout>-->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="FarmPe"
                    android:layout_weight="70"
                    android:textColor="@color/white_text"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="10"
                    android:src="@drawable/ic_search_green"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="right"

                    >
                <RelativeLayout
                    android:id="@+id/destView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
                    android:layout_gravity="center"
    >

                   <!-- <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        />-->
                                <ImageView
                                android:id="@+id/cart_icon"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="20dp"
                                  android:src="@drawable/shopping_cart" />

                    <TextView
                        android:id="@+id/cart_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_filled_red_white"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="2dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="10dp" />
   <!-- <TextView
        android:id="@+id/noti_count"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/border_round"
        android:gravity="center_horizontal"
        android:text=" "
        android:paddingTop="1dp"
        android:textColor="#fff"
        android:textSize="12dp" />-->
</RelativeLayout>
                </LinearLayout>
            </LinearLayout>






        </LinearLayout>




    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/lang_bg_color"
    android:orientation="horizontal"
    >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_border"
            android:fontFamily="@font/segoeui"
            android:hint="   Search"
            android:drawableLeft="@drawable/ic_search_grey"
            android:padding="10dp"
            android:inputType="textCapWords|textCapSentences"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/grey_text_color"
            app:theme="@style/MyStyle" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_search_green"/>


</LinearLayout>


    <FrameLayout
        android:id="@+id/frame_layout_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="82"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        tools:background="#f5f5f5">
