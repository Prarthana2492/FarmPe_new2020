<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/border_empty_curve"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="10dp"
        android:background="@drawable/addrs_top_curve"
        android:paddingVertical="10dp"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="95">


            <TextView
                android:id="@+id/popup_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Price"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/close_popup"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_filter_state"
            android:gravity="center">


            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_error"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >

        <TextView
            android:id="@+id/less_than_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#fff"
            android:fontFamily="@font/segoeui"
            android:text="Less than 20"
            android:textSize="14dp"
            android:padding="10dp"
            android:gravity="start"
            android:textColor="#000000"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        />


    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
         <TextView
             android:id="@+id/barn"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="10"
             android:background="#fff"
             android:fontFamily="@font/segoeui"
             android:text="Barn"
             android:textSize="14dp"
             android:padding="10dp"
             android:gravity="start"
             android:textColor="#000000"
             />

     </LinearLayout>-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >
        <TextView
            android:id="@+id/range_21_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#fff"
            android:fontFamily="@font/segoeui"
            android:text="Rs 21 to Rs50"
            android:textSize="14dp"
            android:padding="10dp"
            android:gravity="start"
            android:textColor="#000000"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >
        <TextView
            android:id="@+id/range_51_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#fff"
            android:fontFamily="@font/segoeui"
            android:text="Rs 51 to 100"
            android:textSize="14dp"
            android:padding="10dp"
            android:gravity="start"
            android:textColor="#000000"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >
        <TextView
            android:id="@+id/range_101_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#fff"
            android:fontFamily="@font/segoeui"
            android:text="Rs 101 to 200"
            android:textSize="14dp"
            android:padding="10dp"
            android:gravity="start"
            android:textColor="#000000"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >
        <TextView
            android:id="@+id/range_201_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#fff"
            android:fontFamily="@font/segoeui"
            android:text="Rs 201 to 500"
            android:textSize="14dp"
            android:padding="10dp"
            android:gravity="start"
            android:textColor="#000000"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        />




</LinearLayout>





