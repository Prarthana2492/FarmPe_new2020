<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_green"
        android:orientation="horizontal"
        android:padding="8dp">


        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_filter_state"
            android:gravity="center">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_go_back_left_arrow_"

                />

        </LinearLayout>


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Select Payment Method"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/wallet_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="-50dp"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:text="Use your 100.00 7Nine Wallet balance"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#dcdcdc" />

        <RadioButton
            android:id="@+id/upi_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other UPI Apps"
            android:drawablePadding="-50dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:layout_marginHorizontal="16dp"
            android:paddingLeft="10dp"
            />

        <RadioButton
            android:id="@+id/payu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayU"
            android:drawablePadding="-50dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_marginHorizontal="16dp"
            android:paddingLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#dcdcdc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREDIT AND DEBIT CARD"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#000"
            android:layout_marginLeft="16dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            >

            <RadioButton
                android:id="@+id/hdfc_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hdfc"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="******1492\nHDFC Bank"
                android:textSize="16dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_gravity=""
                 />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            >

            <RadioButton
                android:id="@+id/icic_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icici_icon"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="******1440\nICICI Bank"
                android:textSize="16dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_gravity=""
                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD ANOTHER BANK ACCOUNT"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/green"
            android:layout_marginLeft="16dp"
            />


    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_filled_red_not_curved"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/conti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAY"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="15dp"
            android:fontFamily="@font/segoeui"
            android:textColor="#ffffff"
            />
        <!-- <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:src="@drawable/ic_right_arrow2"/>-->
    </LinearLayout>

</LinearLayout>